                </shape>
            </item>

            <item>
                <bitmap android:gravity="left" android:src="@drawable/ic_phone_blue_20dp" />
            </item>

            <item>
                <bitmap android:gravity="right" android:src="@drawable/ic_drop_down_blue_24dp" />
            </item>


        </layer-list>
    </item>

    <item>
