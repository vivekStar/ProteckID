<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/grey_90" />
                    <corners android:bottomRightRadius="20dp" android:topLeftRadius="20dp" />
                    <padding android:right="15dp" android:left="@dimen/dimen_15dp" />
                </shape>
            </item>

            <item>
                <bitmap android:gravity="right" android:src="@drawable/ic_arrow_drop_down_white_20dp" />
            </item>

            <item>
                <bitmap android:gravity="left" android:src="@drawable/ic_city_white_20dp" />
            </item>


        </layer-list>
    </item>

    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/grey_90" />
                    <solid android:color="@color/grey_10" />
                    <corners android:bottomRightRadius="20dp" android:topLeftRadius="20dp" />
                    <padding android:right="15dp" android:left="@dimen/dimen_15dp" />
                </shape>
            </item>

            <item>
                <bitmap android:gravity="right" android:src="@drawable/ic_arrow_drop_down_white_20dp" />
            </item>

            <item>
                <bitmap android:gravity="left" android:src="@drawable/ic_city_white_20dp" />
            </item>

        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/grey_90" />
                    <corners android:bottomRightRadius="20dp" android:topLeftRadius="20dp" />
                    <padding android:right="15dp" android:left="@dimen/dimen_15dp" />
                </shape>
            </item>

            <item>
                <bitmap android:gravity="right" android:src="@drawable/ic_arrow_drop_down_white_20dp" />
            </item>
            <item>
                <bitmap android:gravity="left" android:src="@drawable/ic_city_white_20dp" />
            </item>

        </layer-list>
    </item>
</selector>